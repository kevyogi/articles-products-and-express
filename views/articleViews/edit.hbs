<h1>Edit Article</h1>

<form action="/articles/{{item.urltitle}}?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">

  <label for="title">Title: </label><input type="text" id="title" name="title" value="{{item.title}}">
<br>
  <label for="body">Body: </label> <input type="text" id="body" name="body" value="{{item.body}}">
<br>
  <label for="author">Author: </label> <input type="text" id="author" name="author" value="{{item.author}}">
<br>
  <input type="submit" value="Submit">
</form>

<form method="POST" action="/articles/{{item.title}}?_method=DELETE">
  <button type="submit">Delete</button>
</form>

<form method="GET" action="/articles">
  <button type="submit">Back</button>
</form>