<form action="/articles/{{title}}?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">

  <label for="title">Title:</label><input type="text" id="title" name="title" value="{{title}}">
<br>
  <label for="body">Body:</label> <input type="text" id="body" name="body" value="{{body}}">
<br>
  <label for="author">Author:</label> <input type="text" id="author" name="author" value="{{author}}">
<br>
  <input type="submit" value="Submit">
</form>

<form method="GET" action="/articles">
  <button type="submit">Back</button>
</form>