<h1>Edit Product</h1>

<form action="/products/{{id}}?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">

  <label for="name">Name: </label><input type="text" id="name" name="name" value="{{item.name}}">
<br>
  <label for="price">Price: </label> <input type="text" id="price" name="price" value="{{item.price}}">
<br>
  <label for="inventory">Inventory: </label> <input type="text" id="inventory" name="inventory" value="{{item.inventory}}">
<br>
  <input type="submit" value="Submit">
</form>

<form method="POST" action="/products/{{id}}?_method=DELETE">
  <button type="submit">Delete</button>
</form>

<form method="GET" action="/products">
  <button type="submit">Back</button>
</form>