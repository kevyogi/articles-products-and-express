<form action="/products/{{id}}?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">

  <label for="name">Name:</label><input type="text" id="name" name="name" value={{name}}>

  <label for="price">Price:</label> <input type="text" id="price" name="price" value={{price}}>

  <label for="inventory">Inventory:</label> <input type="text" id="inventory" name="inventory" value={{inventory}}>

  <input type="submit" value="Submit">
</form>